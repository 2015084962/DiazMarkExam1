<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imgSize">
        <item name="android:layout_width">69dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="imgDesc">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="innerLayouts">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="noteHeaders">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="noteContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="spidermanText">
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spidermanImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>

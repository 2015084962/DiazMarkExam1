<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="214dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            style="@style/innerLayouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                style="@style/imgSize"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="44dp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/notes" />

            <ImageView
                android:id="@+id/imageView6"
                style="@style/imgSize"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="44dp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/office" />

            <ImageView
                android:id="@+id/imageView7"
                style="@style/imgSize"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="55dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="55dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="44dp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/public1" />

            <TextView
                android:id="@+id/textView"
                style="@style/imgDesc"
                android:layout_marginBottom="51dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Public Notes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <TextView
                android:id="@+id/textView4"
                style="@style/imgDesc"
                android:layout_marginBottom="51dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Office Notes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/textView2"
                style="@style/imgDesc"
                android:layout_marginBottom="51dp"
                android:layout_marginEnd="48dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Personal Notes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="362dp"
        android:layout_height="238dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <android.support.constraint.ConstraintLayout
            style="@style/innerLayouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="158dp"
                android:layout_height="126dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#e52222"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView8">

                <ImageView
                    android:id="@+id/imageView9"
                    style="@style/spidermanImg"
                    app:srcCompat="@drawable/spiderman" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/spidermanText"
                    android:text="New Spiderman game now in stores!" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="167dp"
                android:layout_height="74dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="11dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="11dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ff6021"
                app:layout_constraintBottom_toTopOf="@+id/cardView3"
                app:layout_constraintEnd_toStartOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/noteHeaders"
                    android:text="Note To Self:" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/noteContent"
                    android:layout_marginTop="33dp"
                    android:text="Take medicine at 10pm everyday." />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="158dp"
                android:layout_height="127dp"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#108214"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/noteHeaders"
                    android:text="Office Notes:" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/noteContent"
                    android:layout_marginTop="33dp"
                    android:text="Check proposal." />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/noteContent"
                    android:layout_marginTop="50dp"
                    android:text="Finish Chapter 1." />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/noteContent"
                    android:layout_marginTop="65dp"
                    android:text="Ask prof for recommendation." />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="142dp"
                android:layout_height="78dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/breakingnews" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>